<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.saladevs.changelogclone.App"/>

        <import type="android.text.format.DateUtils"/>

        <import type="com.saladevs.changelogclone.utils.FunctionsKt"/>

        <import type="android.view.View"/>

        <variable
            name="update"
            type="com.saladevs.changelogclone.model.PackageUpdate"/>

        <variable
            name="top"
            type="Boolean"/>

        <variable
            name="bottom"
            type="Boolean"/>

        <variable
            name="extraSpacing"
            type="Boolean"/>
    </data>

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="0dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:maxLines="1"
                    android:text="@{update.version}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="TextView"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:text="@{DateUtils.formatDateTime(App.getContext(), update.date.time, 0)}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="@+id/subtitle"
                    app:layout_constraintRight_toRightOf="@+id/subtitle"
                    app:layout_constraintTop_toBottomOf="@+id/subtitle"
                    tools:text="TextView"/>

                <ImageView
                    android:id="@+id/link"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="0dp"
                    android:src="@{App.context.resources.getDrawable(FunctionsKt.getDetailsDetailedLinkDrawable(top, bottom))}"
                    android:tint="@color/accent"
                    app:layout_constraintBottom_toBottomOf="@+id/title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/subtitle"/>

                <View
                    android:layout_width="4dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@color/accent"
                    android:visibility="@{bottom ? View.GONE : View.VISIBLE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@+id/link"
                    app:layout_constraintRight_toRightOf="@+id/link"
                    app:layout_constraintTop_toBottomOf="@+id/link"
                    app:layout_constraintVertical_bias="0.0"/>

                <View
                    android:layout_width="4dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@color/accent"
                    android:visibility="@{top ? View.GONE : View.VISIBLE}"
                    app:layout_constraintBottom_toTopOf="@+id/link"
                    app:layout_constraintLeft_toLeftOf="@+id/link"
                    app:layout_constraintRight_toRightOf="@+id/link"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/support"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="8dp"
                    android:autoLink="web"
                    android:lineSpacingExtra="6dp"
                    android:text="@{update.description}"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textIsSelectable="true"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@+id/subtitle"
                    app:layout_constraintRight_toRightOf="@+id/subtitle"
                    app:layout_constraintTop_toBottomOf="@+id/title"
                    tools:text="- Blablabalbdsflblablabla\n- Blablasdfasdfasla"/>

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <View
            android:layout_width="4dp"
            android:layout_height="16dp"
            android:layout_marginLeft="26dp"
            android:background="@color/accent"
            android:visibility="@{extraSpacing ? View.VISIBLE : View.GONE}"/>
    </LinearLayout>

</layout>
